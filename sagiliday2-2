#include <stdio.h>

int main() {
    int num, i, fact = 1;

    printf("Enter a positive integer: ");
    scanf("%d", &num);

    if (num < 0) {
        printf("Error: Factorial of a negative number is undefined.");
    }
    else {
        for (i = 1; i <= num; i++) {
            fact *= i;
        }

        printf("Factorial of %d is %d.", num, fact);
    }

    return 0;
}
output
Enter a positive number:6
Factorial of 6 is 720.
